<script>
  function parseHTML() {
    var input = document.getElementById('inputHTML').value;
    var output = input.replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
    document.getElementById('outputHTML').value = output;
  }
</script>
